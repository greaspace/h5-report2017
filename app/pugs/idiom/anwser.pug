    .ui-scroll-inner.ui-daiyan.hidden
      .ui-hd.text-center
        img(src="./images/idiom/answer-daoshi-title.png")
      .ui-bd
        .container
          .text-center.ui-answer-desc
            img(src="./images/idiom/answer-daiyan-desc.png")
