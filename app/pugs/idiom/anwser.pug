          - for (var i=1; i<4; i++)
            img.item.time(src="./images/idiom/answer-daiyan-time-"+i+".png" class="time-"+i)
            img.item.photo(src="./images/idiom/answer-daiyan-photo-"+i+".png" class="photo-"+i)
